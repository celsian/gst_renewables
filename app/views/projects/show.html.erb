<div class="row">
  <span class="span6">
    <h2>Project: <%= @project.name %></h2>
  </span>
  <span class="span3">
    <p class="text-right">
    <button class="btn btn-small btn-primary" type="button"><%= link_to "Edit", edit_project_path(@project), {style: 'color:#FFFFFF;'} %></button>
    <button class="btn btn-small btn-danger" type="button">
      <%= link_to "Delete", @project, data: { confirm: "Are you sure you want to permanently delete this Project?" }, style: 'color:#FFFFFF;', method: :delete %>
    </button>
    </P>
  </span>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Created On:</th><th>Reference Number:</th>
    </tr>
  </thead>
  <% @pv_commissions.each do |pv_commission| %>
    <tr>
      <td width=210><%= pv_commission.created_at.in_time_zone("Pacific Time (US & Canada)").asctime %></td><td><%= link_to "#{pv_commission.reference_number}", pv_commission %></td>
    </tr>
  <% end %>
</table>
<div class="row">
  <span class="span9">
    <button class="btn btn-small btn-primary" type="button"><%= link_to "New PV Commission", new_pv_commission_path(project_id: @project.id), {style: 'color:#FFFFFF;'} %></button>
  </span>
</div>
<br>
