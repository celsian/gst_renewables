<div class="row">
  <span class="span6">
    <h3>Project: <%= @project.name %></h3>
  </span>
  <span class="span3">
    <p class="text-right">
    <% if current_user.editor || current_user.admin %>
      <%= link_to "Edit", edit_project_path(@project), class: "btn btn-small btn-primary" %>
    <% end %>
    <% if current_user.admin %>
      <%= link_to "Delete", @project, data: { confirm: "Are you sure you want to permanently delete this Project?" }, class: "btn btn-small btn-danger", method: :delete %>
    <% end %>
    </P>
  </span>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Created On:</th><th>Reference Number:</th>
    </tr>
  </thead>
  <% @pv_commissions.each do |pv_commission| %>
    <tr>
      <td width=210><%= pv_commission.created_at.in_time_zone("Pacific Time (US & Canada)").asctime %></td><td><%= link_to "#{pv_commission.reference_number}", pv_commission %></td>
    </tr>
  <% end %>
</table>
<div class="row">
  <span class="span9">
    <% if current_user.editor || current_user.admin %>
      <%= link_to "New PV Commission", new_pv_commission_path(project_id: @project.id), class: "btn btn-small btn-primary" %>
    <% end %>
    <% if current_user.admin %>
      <%= link_to "Add & Remove Customers", add_customers_to_project_path, class: "btn btn-small btn-primary" %>
    <% end %>
  </span>
</div>
<br>
