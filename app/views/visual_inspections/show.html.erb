<div class="row">
  <span class="span7">
    <h2>Visual Inspection: <%= params[:number] %></h2>
  </span>
  <span class="span2">
    <p class="text-right">
        <%= link_to "Edit", edit_visual_inspection_path(@visual_inspection), class: "btn btn-small btn-primary" %>
        <%= link_to "Delete", @visual_inspection, data: { confirm: "Are you sure you want to permanently delete this Visual Inspection?" }, class: "btn btn-small btn-danger", method: :delete %>
    </p>
  </span>
</div>
<div class="row">
  <span class="span9">
    <% @visual_inspection.infoboxes.each do |visual_inspection| %>
      <p><h4><%= visual_inspection.title %></h4></p>
      <p><%= visual_inspection.description %></p>
      <p>
        <% visual_inspection.inspection_images.each do |picture| %>
          <%= link_to image_tag(picture.pic_url(:thumb).to_s), picture.pic_url.to_s %>
        <% end %>
      </p><hr>
    <% end %>
  </span>
</div><br>