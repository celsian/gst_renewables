<div class="fields">
    <table border=0 cellpadding=10>
    <tr>
      <td valign="top">
        <div>
          <%= f.hidden_field :_destroy %>
          <%= f.collection_select :title, Infobox::DATA_ACQUISITION_SYSTEM, :to_s, :to_s, :include_blank => false %> <%= link_to_remove_fields 'X', f %><br>
          <%= f.text_area :description, style: "width:500px; height:90px;" %>
        </div>
      </td>
      <td width=310px valign="top">
        <div>
          <p class="fields">
            <%= f.fields_for :inspection_images do |builder| %>
              <%= render "inspection_image_fields", :f => builder %>
            <% end %>
          </P>
            <%= link_to_add_fields "Add Image", f, :inspection_images %>
        </div>
      </td>
    </tr>
  </table>
  <hr>
</div>