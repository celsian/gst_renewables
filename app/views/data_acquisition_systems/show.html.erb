<div class="row">
  <span class="span7">
    <h2>Data Acquisition System: <%= @data_acquisition_system.name %></h2>
  </span>
  <span class="span2">
    <p class="text-right">
      <% if current_user.editor || current_user.admin %>
        <%= link_to "Edit", edit_data_acquisition_system_path(@data_acquisition_system), class: "btn btn-small btn-primary" %>
        <%= link_to "Delete", @data_acquisition_system, data: { confirm: "Are you sure you want to permanently delete this Inverter Inspection?" }, class: "btn btn-small btn-danger", method: :delete %>
      <% end %>
    </p>
  </span>
</div>
<div class="row">
  <span class="span9">
    <table class="table table-striped">
      <% @data_acquisition_system.infoboxes.each do |infobox| %>
        <tr>
          <td>
            <h4>
              <%= infobox.title %>:
            </h4>
            <p>
              <li>
                <%= infobox.description %>
              </li>
            </p>
            <p>
              <% infobox.inspection_images.each do |picture| %>
                <%= link_to image_tag(picture.pic_url(:thumb).to_s), picture.pic_url.to_s %>
              <% end %>
            </p>
          </td>
        </tr>
      <% end %>
    </table>
  </span>
</div><br>